<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/colorWhiteButton"
        android:layout_width="34dp"
        android:layout_height="26dp"
        android:src="@drawable/color_item_white_clicked"
        />
    <ImageView
        android:id="@+id/colorGrayButton"
        android:layout_width="34dp"
        android:layout_height="26dp"
        android:src="@drawable/color_item_gray"
        android:layout_marginStart="14dp"/>

    <ImageView
        android:id="@+id/colorDarkBlueButton"
        android:layout_width="34dp"
        android:layout_height="26dp"
        android:src="@drawable/color_item_dark_blue"
        android:layout_marginStart="14dp"/>

</LinearLayout>