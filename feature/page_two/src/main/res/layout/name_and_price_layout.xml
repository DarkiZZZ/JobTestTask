<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/productNameTextView"
        android:layout_width="@dimen/name_price_layout_width_product_text"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/name_price_layout_margin_start_product_text"
        style="@style/TextAppearance.OnlineShop.ProductName"
        tools:text="@string/new_balance_sneakers" />

    <TextView
        android:id="@+id/priceTextView"
        android:layout_width="@dimen/name_price_layout_width_price_text"
        android:layout_height="@dimen/name_price_layout_height_price_text"
        android:layout_marginTop="@dimen/name_price_layout_margin_top_price_text"
        android:layout_alignParentEnd="true"
        android:gravity="right"
        android:layout_marginEnd="@dimen/name_price_layout_margin_end_price_text"
        style="@style/TextAppearance.OnlineShop.ProductPrice"
        tools:text="@string/product_price" />
</RelativeLayout>