<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/flashSaleTextView"
        android:layout_width="@dimen/flash_sale_layout_sale_text_width"
        android:layout_height="@dimen/flash_sale_layout_sale_text_height"
        style="@style/TextAppearance.OnlineShop.Latest"
        android:text="@string/flash_sale"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="@dimen/latest_layout_margin_start_latest_text"
        android:layout_marginTop="@dimen/flash_sale_layout_margin_top_sale_text"/>

    <TextView
        android:id="@+id/viewAllButton"
        android:layout_width="@dimen/flash_sale_layout_view_button_width"
        android:layout_height="@dimen/flash_sale_layout_view_button_height"
        android:layout_marginEnd="@dimen/flash_sale_layout_margin_end_view_button"
        style="@style/TextAppearance.OnlineShop.ViewAll"
        android:text="@string/view_all"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/flashSaleTextView" />

</androidx.constraintlayout.widget.ConstraintLayout>