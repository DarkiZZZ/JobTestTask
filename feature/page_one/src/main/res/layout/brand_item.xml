<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/brand_item_parent_width"
    android:layout_height="@dimen/brand_item_parent_height"
    android:layout_marginStart="@dimen/brand_item_margin_start_parent">

    <ImageView
        android:id="@id/backgroundImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:src="@drawable/brand_background"
        android:scaleType="centerCrop"
        android:contentDescription="@string/brand_desc" />

</androidx.constraintlayout.widget.ConstraintLayout>