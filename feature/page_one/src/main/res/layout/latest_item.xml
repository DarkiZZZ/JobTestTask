<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="114dp"
    android:layout_height="149dp"
    xmlns:tools="http://schemas.android.com/tools"
    tools:background="@drawable/latest_item_example"
    android:layout_marginStart="@dimen/margin_between_items_dimen">

    <ImageView
        android:id="@+id/addButton"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="@dimen/margin_latest_add_button_dimen"
        android:layout_marginBottom="@dimen/margin_latest_add_button_dimen"/>

    <LinearLayout
        android:id="@+id/categoryContainerView"
        android:layout_width="@dimen/category_background_view_dimen"
        android:layout_height="12dp"
        android:gravity="center"
        android:background="@drawable/latest_item_category_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/margin_cost_value_dimen"
        android:layout_marginBottom="@dimen/margin_bottom_category_background_dimen"
        android:orientation="horizontal" >
        
        <TextView
            android:id="@+id/latestCategoryNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="8dp"
            android:maxWidth="@dimen/category_background_view_dimen"
            android:layout_gravity="center"
            android:gravity="center"
            tools:text="Games"
            style="@style/TextAppearance.OnlineShop.LatestCategoryName"/>

    </LinearLayout>

    <TextView
        android:id="@+id/itemNameTextView"
        style="@style/TextAppearance.OnlineShop.LatestItemName"
        android:layout_width="61dp"
        android:layout_height="26dp"
        android:maxWidth="@dimen/category_background_view_dimen"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/categoryContainerView"
        tools:text="Play Station 5 console"
        android:layout_marginStart="@dimen/margin_cost_value_dimen"
        android:layout_marginTop="@dimen/margin_top_item_name_dimen"/>

    <TextView
        android:id="@+id/itemCostTextView"
        style="@style/TextAppearance.OnlineShop.LatestItemCost"
        android:layout_width="wrap_content"
        android:layout_height="9dp"
        android:text="@string/latest_item_cost_value"
        android:layout_marginTop="@dimen/margin_top_cost_value_dimen"
        android:layout_marginStart="@dimen/margin_cost_value_dimen"
        android:layout_marginBottom="@dimen/margin_cost_value_dimen"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/itemNameTextView" />

</androidx.constraintlayout.widget.ConstraintLayout>