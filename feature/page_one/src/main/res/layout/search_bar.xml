<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/search_bar_width_parent"
    android:layout_height="@dimen/search_bar_height_parent"
    android:layout_marginTop="@dimen/search_bar_margin_top_parent"
    android:layout_gravity="center|top"
    android:background="@drawable/rectangle_5"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <EditText
        android:id="@+id/searchEditText"
        android:layout_width="match_parent"
        android:layout_height="@dimen/search_bar_height_edit_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="center"
        android:background="@null"
        android:hint="@string/search_hint"
        android:ellipsize="start"
        android:singleLine="true"
        style="@style/TextAppearance.OnlineShop.SearchHint"
        android:importantForAutofill="no"
        android:inputType="text"/>

    <ImageView
        android:id="@+id/searchButton"
        android:layout_width="@dimen/search_bar_width_search_button"
        android:layout_height="@dimen/search_bar_height_search_button"
        android:src="@drawable/ic_search"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="@dimen/search_bar_margin_end_search_bar"
        android:contentDescription="@string/search_icon_desc" />

</androidx.constraintlayout.widget.ConstraintLayout>