<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/help_layout_height_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="@dimen/help_layout_margin_top_parent">

    <ImageView
        android:id="@+id/helpImageView"
        android:layout_width="@dimen/help_layout_width_icon"
        android:layout_height="@dimen/help_layout_height_icon"
        android:layout_marginStart="@dimen/help_layout_margin_start_icon"
        android:src="@drawable/ic_help"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/menu_item_desc" />

    <TextView
        android:id="@+id/helpTextView"
        style="@style/TextAppearance.OnlineShop.PayRelated"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/help_layout_margin_start_text"
        android:gravity="center"
        android:text="@string/help"
        app:layout_constraintBottom_toBottomOf="@id/helpImageView"
        app:layout_constraintStart_toEndOf="@id/helpImageView"
        app:layout_constraintTop_toTopOf="@id/helpImageView" />

</androidx.constraintlayout.widget.ConstraintLayout>